<div class="container">
    <h1>I Can Has Burgerz!</h1>
    <div class="row">
        <div class="col">
            <h4>Burgerz I No Eated...</h4>
            <div>
                <ul style="list-style-type:none;">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <h4>Burgerz I Eated!</h4>
            <div>
                <ul style="list-style-type:none;">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}} 
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Can Has More Burgerz?</h4>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerz">Add More Burgerz:</label>
                    <input type="text" id="burgerz" name="burger_name">
                </div>
                <button type="submit">Add Burger!</button>
            </form>
        </div>
    </div>
</div>