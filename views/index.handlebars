<h1>I Can Has Burgerz!</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <h4>Burgerz I No Eated...</h4>
            <div>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <h4>Burgerz I Eated!</h4>
            <div>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burger/burger-bock devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>Can Has More Burgerz?</h3>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerz">Add More Burgerz:</label>
                    <input type="text" id="burgerz" name="name">
                </div>
                <button type="submit">Add Burger!</button>
            </form>
        </div>
    </div>
</div>